<%- include('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/updateEstudiante/<%= datos.idestudiante %>/<%= datos.idcurso %>" method="post">
                        <div class="form-group">
                            <h2>Editar Estudiante</h2>
                        </div>
                        <div class="form-group">
                            <input type="text" name="idestudiante" value="<%= datos.idestudiante %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= datos.nombre %>"  class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="email"  value="<%= datos.email %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="idcurso" value="<%= datos.idcurso %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Editar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('partials/_footer') %>