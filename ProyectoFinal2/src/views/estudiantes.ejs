<%- include('partials/_header') %>

<div class="container">
    <div class="row mt-5">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id estudiante</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% datos.forEach(estudiante => { %>
                    <tr>
                        <td><%= estudiante.idestudiante %></td>
                        <td><%= estudiante.nombre %></td>
                        <td><%= estudiante.email %></td>
                        <td>
                            <a href="/deleteEstudiante/<%= estudiante.idestudiante %>/<%= estudiante.idcurso %>" class="btn btn-danger">Eliminar Estudiante</a>
                            <a href="/updateEstudiante/<%= estudiante.idestudiante %>" class="btn btn-info">Editar Estudiante</a>
                        </td>
                    </tr>
                <% })%>
            </tbody>
        </table>
        <div class="row mt-5">
            <div class="card">
                <div class="card-body">
                    <form action="/addEstudiante" method="post">
                        <div class="form-group">
                            <h2>Agregar Estudiante al Curso</h2>
                        </div>
                        <div class="form-group">
                            <input type="text" name="idestudiante" placeholder="Id del Estudiante" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre Completo" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="email" placeholder="Correo ElectrÃ³nico Estudiantil" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="idcurso" placeholder="Id del Curso" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Agregar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>