<%- include("../header"); %>
<div class="col-12">
    <h1>Editar usuario</h1>
    <form method="post" action="/usuarios/actualizar">

        <input value="<%= usuario.id %>" name="id" type="hidden">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= usuario.nombre %>" required id="nombre" placeholder="Nombre del usuario"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="email">email</label>
            <input value="<%= usuario.email %>" required id="email" placeholder="email del usuario"
                class="form-control" type="email" name="email">
        </div>
        <div>
            <div class="form-group">
            <label for="genero">genero</label>
            <input value="<%= usuario.genero %>" required id="genero" placeholder="Escriba su genero"
                class="form-control" type="text" name="genero">
        </div>
        <div>
            <div class="form-group">
            <label for="contrasena">Contraseña</label>
            <input value="<%= usuario.contrasena %>" require id="contrasena" placeholder="Escriba su contraseña"
                class="form-control" type="text" name="contrasena"
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/usuarios" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>